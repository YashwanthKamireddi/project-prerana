# Environment Configuration
# =========================
# Copy this file to .env and update values

# Application
APP_NAME=AADHAAR-PRERANA
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (optional)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/prerana_db

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=prerana-api-key-2026

# ML Models
MODEL_PATH=../ml_models
GENESIS_MODEL_VERSION=v1.2.0
MOBILITY_MODEL_VERSION=v1.1.5
INTEGRITY_MODEL_VERSION=v2.0.1

# Analysis Parameters
ZSCORE_THRESHOLD=3.0
ANOMALY_LOOKBACK_DAYS=30
MIGRATION_VELOCITY_THRESHOLD=200.0

# Logging
LOG_LEVEL=INFO
